types
  enum Fault {late, early, value, omission}

components
  A
    ports
      in aIn1
      in aIn2
      out aOut1
      out aOut2
    behaviour
      (Fault.omission, Fault.late) -> (Fault.early, Fault.omission)
      (Fault.late, Fault.value) -> (Fault.late, Fault.omission)
      (*, *) -> (Fault.early, Fault.value)
      (Fault.value, _) -> (Fault.value, {Fault.late, Fault.early})
      (f, Fault.early) -> (Fault.omission, f)

  B
    ports
      in bIn
      out bOut
    behaviour
      Fault.early -> Fault.omission
      * -> Fault.value
      Fault.value -> Fault.early

  C
    ports
      in cIn
      out cOut
    behaviour
      Fault.omission -> Fault.late
      Fault.late -> Fault.value
      _ -> Fault.early
      * -> Fault.late

connections
  A2B : A.aOut1 -> B.bIn

  A2C : A.aOut2 -> C.cIn

  C2A : C.cOut -> A.aIn1

  B2A : B.bOut -> A.aIn2