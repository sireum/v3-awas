types
  enum Fault {late, value}

behavior
  FailStop:
    states = [operational, fail]
    events = {failure, recovery}

components
  A
  with Fault
    ports
      in aIn
      out aOut
    behavior
      aIn:late -> aOut:late
      * -> aOut:value

  B
  with Fault
    ports
      in bIn
      out bOut
    behavior
      bIn:value -> *
      * -> bOut:late

connections
  A2B : A.aOut -> B.bIn

  B2A : B.bOut -> A.aIn