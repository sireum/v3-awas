types
  enum Fault {late, value}

behavior
  FailStop:
    states = [operational, fail]
    events = {failure, recovery}

system fptc_base

  sub-components {
    A
      with Fault
      ports
        in aIn
        out aOut
      propagations
        aIn = {late}
        aOut = {late, value}
      behavior
        b1 : aIn{late} -> aOut{late}
        b2 : * -> aOut{value}

    B
      with Fault
      ports
        in bIn
        in bIn2
        out bOut
      propagations
        bIn = {value, late}
        bOut = {late}
      behavior
        b3 : bIn{value} -> *
        b4 : (bIn{late} and bIn2{late}) -> bOut{late}
        b5 : * -> bOut{late}
  }
connections
  A2B : A.aOut -> B.bIn

  B2A : B.bOut -> A.aIn